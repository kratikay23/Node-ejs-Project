<!DOCTYPE html>
<html lang="en">

<head>
    <title>View Products</title>
    <%- include("__bootstrap.ejs") %>
    <style>
        .product-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.2s;
        }
        .product-card:hover {
            transform: scale(1.05);
        }
        .product-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }
    </style>
</head>

<body>
    <%- include("__userheader.ejs") %>

    <div class="container mt-4">
        <h2 class="text-center">Product List</h2>
        <div class="row mt-3">
            <% products.forEach(product => { %>
                <div class="col-md-4 mb-4">
                    <div class="card product-card">
                        <img src="/uplode/<%= product.Images %>" class="product-image" alt="Product Image" onerror="this.src='/default-image.jpg'">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= product.pName %></h5>
                            <p class="card-text">Quantity: <%= product.description %></p>
                            <p class="card-text font-weight-bold">â‚¹<%= product.price %></p>
                            
                            <form action="/add-to-cart/<%= product.id %>" method="post">
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>

</html>
